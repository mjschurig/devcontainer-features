{
  "id": "deal-ii",
  "version": "1.4.0",
  "name": "deal.II",
  "description": "Installs deal.II (Differential Equations Analysis Library) - a C++ finite element library",
  "documentationURL": "https://github.com/mjschurig/devcontainer-features/tree/main/src/deal-ii",
  "licenseURL": "https://github.com/dealii/dealii/blob/master/LICENSE.md",
  "keywords": [
    "cpp",
    "c++",
    "finite-elements",
    "fem",
    "pde",
    "numerical-analysis",
    "scientific-computing"
  ],
  "options": {
    "version": {
      "type": "string",
      "proposals": [
        "9.2.0",
        "9.3.0",
        "9.4.0",
        "9.5.0",
        "9.5.1",
        "9.5.2",
        "9.6.0"
      ],
      "default": "9.6.0",
      "description": "Select the version of deal.II to install."
    },
    "enableMPI": {
      "type": "boolean",
      "default": false,
      "description": "Enable MPI support (installs OpenMPI)"
    },
    "enablePETSc": {
      "type": "boolean",
      "default": false,
      "description": "Enable PETSc support"
    },
    "enableTrilinos": {
      "type": "boolean",
      "default": false,
      "description": "Enable Trilinos support for linear algebra operations"
    },
    "buildThreads": {
      "type": "string",
      "default": "4",
      "description": "Number of threads to use for building deal.II"
    }
  },
  "dependsOn": {
    "ghcr.io/mjschurig/devcontainer-features/trilinos": {
      "when": "options.enableTrilinos == true"
    },
    "ghcr.io/devcontainers-extra/features/cmake:1": {}
  },
  "containerEnv": {
    "DEAL_II_DIR": "/usr/local/deal.II",
    "CMAKE_PREFIX_PATH": "/usr/local/deal.II:/usr/local/trilinos:${CMAKE_PREFIX_PATH}",
    "TRILINOS_DIR": "/usr/local/trilinos"
  },
  "capAdd": [],
  "installsAfter": ["ghcr.io/devcontainers/features/common-utils"]
}
